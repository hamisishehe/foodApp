<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".profilefragment">


    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/man"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/fullnameview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Welcome to foodie street"
                android:textSize="17dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/emailview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to foodie street"
                android:textSize="17dp"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/personalinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Personal Info"
        android:paddingLeft="30dp"
        android:textSize="17dp"
        android:textColor="@color/white" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iconprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:backgroundTint="@color/primaryopacity"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_location_on_24"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="56dp"
            android:paddingTop="17dp"
            android:text="Personal Address"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="100dp"
            android:paddingTop="15dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/primaryopacity"
            android:src="@drawable/baseline_lock_24"
            android:outlineAmbientShadowColor="@color/primaryopacity"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="56dp"
            android:paddingTop="17dp"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="100dp"
            android:paddingTop="15dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:backgroundTint="@color/primaryopacity"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_local_shipping_24"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="56dp"
            android:paddingTop="17dp"
            android:text="Orders"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="100dp"
            android:paddingTop="15dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:backgroundTint="@color/primaryopacity"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_logout_24"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="56dp"
            android:paddingTop="17dp"
            android:text="Logout"
            android:id="@+id/logout"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="100dp"
            android:paddingTop="15dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            />



    </RelativeLayout>




</LinearLayout>