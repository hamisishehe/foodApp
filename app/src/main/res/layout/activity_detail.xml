<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/backbutton"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            />




    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="1000dp"
                android:layout_height="350dp">
                <ImageView
                    android:id="@+id/d_imagedisplay"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="45dp"
                android:id="@+id/d_namedisplay"
                android:textStyle="bold"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text=""
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:paddingBottom="10dp"
                android:id="@+id/d_pricedisplay"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get your food faster than ever with our app! When you order from your favorite restaurant, we promise to bring it to you within just 20 minutes. Our app uses a smart system to find the quickest route for our delivery person, so your food gets to you in no time. As soon as you order, we confirm it right away and send it to the restaurant. You can track your food in real-time to know exactly when it will reach you. Ordering is super easy with our app, and we make sure your food is hot and yummy when it gets to your door. Enjoy quick and delicious meals with our app â€“ making food delivery simpler and faster!"
                android:textSize="12dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/white" />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:background="@color/background"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_height="100dp">


                <Button
                    android:id="@+id/btnDecrease"
                    android:background="@drawable/round_corner"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginRight="16dp"
                    />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/btnDecrease"
                    android:layout_toLeftOf="@id/btnIncrease"/>

                <Button
                    android:id="@+id/btnIncrease"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:background="@drawable/round_corner"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true"
                  />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    />

                <Button
                    android:id="@+id/ordernow"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Order Now"
                    android:textSize="15dp"

                    android:background="@drawable/custom_button"
                    />



            </LinearLayout>


        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>








</LinearLayout>